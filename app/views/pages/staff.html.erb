<div class="banner">
  <img src="http://res.cloudinary.com/dfeoxpejq/image/upload/c_scale,w_1240/v1491240803/Sfondo_Staff_rxmu0l.jpg" alt="" />
    <div class="project-banner-title">
      <h1>STAFF</h1>
    </div>
</div>
<div>
  <div class="staff-title">
    <h3>KENYA</h3>
  </div>
  <div class="staff-container">
    <% if @members %>
      <% @members.each do |member| %>
        <% if member.kenya == true %>
          <div class="staff-card">
            <%= cl_image_tag member.photo, height: 175, width: 175, crop: :thumb, gravity: :face %>
            <h6><%= member.name %></h6>
            <h6><%= member.role %></h6>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
<div>
  <div class="staff-title">
    <h3>EUROPA</h3>
  </div>
  <div class="staff-container">
    <% if @members %>
      <% @members.each do |member| %>
        <% if member.kenya == false %>
          <div class="staff-card">
            <%= cl_image_tag member.photo, height: 175, width: 175, crop: :thumb, gravity: :face %>
            <h6><%= member.name %></h6>
            <h6><%= member.role %></h6>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
